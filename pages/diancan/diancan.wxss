/* pages/diancan/diancan.wxss */
/* 点菜列表总设置 */
.ROOT{
  display: flex;
  margin-bottom: 80rpx;
  margin-top: 10rpx;
}
/* 左侧选择栏 */
.leftroot{
  min-width: 160rpx;
}
/* 左侧分类 */
.tab_item{
  border-bottom: 1px solid rgb(201, 201, 201);
font-size: 35rpx;
padding: 8rpx;
}
/* 图片框的大小的设置 */
.swiper{
  width: 100%;
 }

 /* 菜品列表布局的设置 */
 .food_list{
   position: relative;
   flex: 1;
 }
 .caipinliebiao{
   display: flex;
   margin: 5rpx 10rpx;
   border-bottom: 1px solid gainsboro;
   margin-bottom: 90rpx;
 }
 /* 菜品图片大小的设置 */
 .item_tupian{
   width: 120rpx;
   height: 120rpx;
   border-radius: 20%;
 }
 /* 菜品名字样式的设置 */
 .item_name{
  font-size: 40rpx;
 }
/* 菜品销量样式的设置 */
 .item_xiaoliang{
   font-size: 30rpx;
   color: gray;
 }
 /* 菜品价格样式的设置 */
 .item_prince{
   margin-left: -135rpx;
   font-size: 35rpx;
   font-weight: bolder;
   color: orange;
 }
 .bottom_root{
  display: flex;
}
 /* 数量样式的设置 */
.number{
  margin:4rpx 10rpx;
  font-size: 40rpx;
}
/* 加减号样式的设置 */
.jiajian{
  width: 40rpx;
  height: 40rpx;
}
  /* 底部区域的设置 */
 .bottom_all{
   height: 80rpx;
   position: fixed;
   bottom: 0;
   left: 0;
   width: 100%;
   background-color: rgb(255, 217, 47);
   display:  flex;
   border-radius: 10%;
 }
   /* 选好了的按钮的设置 */
 .xuanhaole{
   width: 200rpx;
   background-color: lime;
   line-height: 80rpx;
   text-align: center;
   color: white;
   border-radius: 10%;
 }
    /* 总计的数量和价格的设置 */
 .zongji{
   flex: 1;
   line-height: 80rpx;
   text-align: center;
   font-size: 32rpx;
 }
     /* 购物车背景色的布局设置 */
 .gouwuche{
   width: 110rpx;
   height: 110rpx;
   border-radius: 50%;
   background-color: rgb(255, 169, 71);
   position: absolute;
   top: -50rpx;
   left: 10rpx;
 }
      /* 购物车图标的布局设置 */
 .gouwuche_img{
   width: 80rpx;
   height: 80rpx;
   margin-left: 15rpx;
   margin-top: 20rpx;
 }
       /* 购物车展开后蒙层的布局设置 */
 .mengceng{
   position: fixed;
   top:0;
   left: 0;
   right: 0;
   bottom: 0;  
   opacity: 0.5;    /* 设置组件的背景透明度 */
   background-color: black;
   z-index: 100;  /* 设置组件的层级 */
 }
        /* 购物车展开后的列表布局设置 */
.gouwucheliebiao{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  height: 550rpx;
  background: white;
  z-index: 200;   /* 设置组件的层级 */
  overflow: auto;
}
        /* 购物车列表顶部布局设置 */
.liebiaoding{
  display: flex;
  justify-content: space-between;
  background:#ffe9cd ;
  height: 60rpx;
  color: rgb(0, 0, 0);
  padding: 5rpx 15rpx;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 300;   /* 设置组件的层级 */
}
        /* 购物车的内置列表设置 */
.gouwuche_in_list{
  margin-top: 65rpx;
}
        /* 购物车列表顶部文字设置 */
.toptitle{
  font-size: 45rpx;
}
        /* 购物车内列表设置 */
.gouwuche_item{
  display: flex;
  border-bottom: 1px solid gray;
  padding: 5rpx 15rpx;
  align-items: center;
}
.gouwuche_item_left{
  flex: 1;
}
.gouwuche_item_prince{
  font-weight: bolder;
  color: orange;
}
        /* 关闭一条购物车的菜品 */
.gouwuche_item_close{
  width: 50rpx;
  height: 50rpx;
  margin-left: 15rpx;
}
        /* 购物车中没有商品时的提示 */
.noting{
  text-align: center;
  margin-top: 200rpx;
}
.notingtext{
  background: chocolate;
  padding: 30rpx;
  color: white;
  border-radius: 40rpx;
}
        /* 左侧选中的样式 */
.select{
  color: white;
  background: orange;
}

