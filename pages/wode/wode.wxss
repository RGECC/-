/* pages/wode/wode.wxss */

.avatar-wrapper{
  border-radius: 50%;
}
.beijingtupian{
  height: 400rpx;
  background-color: #FFC0CB;
}
.beijingse {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 17px;
  background: white;
  border-bottom: 1px solid gainsboro;
}
.jiantou {
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  /* margin-left: 66%; */
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.button{
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px;
}
.button::after{
  border: none;
  border-radius: 0;
}
.touxiang{
  border-radius: 50%;
}